        <Label x:Name="LblStatuspack4" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="170" Margin="580,210,0,0"/>
        <Label x:Name="LblStatus1" HorizontalAlignment="Left" Margin="10,175,0,0" VerticalAlignment="Top" Height="30" Width="170"/>
        <Label x:Name="LblStatus2" HorizontalAlignment="Left" Margin="200,175,0,0" VerticalAlignment="Top" Height="30" Width="170"/>
        <Label x:Name="LblStatus3" HorizontalAlignment="Left" Margin="385,175,0,0" VerticalAlignment="Top" Height="30" Width="170"/>
        <Label x:Name="LblStatus4" HorizontalAlignment="Left" Margin="580,175,0,0" VerticalAlignment="Top" Height="30" Width="170"/>
