        </GridSplitter>
        <GridSplitter HorizontalAlignment="Left" Height="1372" Margin="375,130,0,0" VerticalAlignment="Top" Width="10" RenderTransformOrigin="0.5,0.5">
            <GridSplitter.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
