        </GridSplitter>
        <GridSplitter HorizontalAlignment="Left" Height="1372" Margin="565,130,0,0" VerticalAlignment="Top" Width="10" RenderTransformOrigin="0.5,0.5">
            <GridSplitter.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </GridSplitter.RenderTransform>
        </GridSplitter>
        <Label Content="Primo Pacchetto:" HorizontalAlignment="Left" Margin="10,144,0,0" VerticalAlignment="Top" Width="170"/>
        <Label Content="Secondo Pacchetto:" HorizontalAlignment="Left" Margin="200,144,0,0" VerticalAlignment="Top" Width="170"/>
        <Label Content="Terzo Pacchetto:" HorizontalAlignment="Left" Margin="390,144,0,0" VerticalAlignment="Top" Width="170"/>
        <Label Content="Quarto Pacchetto:" HorizontalAlignment="Left" Margin="580,144,0,0" VerticalAlignment="Top" Width="170"/>
        <Label x:Name="LblStatuspack1" HorizontalAlignment="Left" Margin="10,210,0,0" VerticalAlignment="Top" Height="30" Width="170"/>
